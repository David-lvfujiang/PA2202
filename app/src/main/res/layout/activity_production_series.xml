<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProductionSeriesActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/demension_dp60"
        android:gravity="center_vertical"
        android:text="@string/production_series"
        android:textColor="@color/fd_text_black"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp24"
        android:layout_marginTop="@dimen/demension_dp10"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <RadioButton
            android:id="@+id/rbSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sound_series_selector"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbEarphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/demension_dp13"
            android:background="@drawable/earphone_series_selector"
            android:button="@null"
            app:layout_constraintLeft_toRightOf="@id/rbSound" />
    </RadioGroup>

    <com.fenda.onn.ui.view.NoScrollViewPager
        android:id="@+id/vpContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/demension_dp24"
        android:layout_marginTop="@dimen/demension_dp25"
        android:layout_marginRight="@dimen/demension_dp24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>