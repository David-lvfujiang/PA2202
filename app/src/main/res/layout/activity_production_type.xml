<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pic_indoor"
        app:layout_constraintDimensionRatio="w,1:2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp19"
        android:layout_marginTop="@dimen/demension_dp42"
        android:src="@mipmap/icon_back_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp29"
        android:gravity="center_vertical"

        android:text="@string/bind_production_series"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintLeft_toRightOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/demension_dp14"
        android:layout_marginLeft="@dimen/demension_dp16"
        android:layout_marginRight="@dimen/demension_dp16"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivHead" />
</androidx.constraintlayout.widget.ConstraintLayout>