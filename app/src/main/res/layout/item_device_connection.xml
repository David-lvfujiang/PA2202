<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/demension_dp12"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp19"

        android:src="@mipmap/icon_device_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp23"
        android:textColor="@color/fd_text_black"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintBottom_toBottomOf="@id/ivPic"
        app:layout_constraintLeft_toRightOf="@id/ivPic"
        app:layout_constraintTop_toTopOf="@id/ivPic" />

    <TextView
        android:id="@+id/tvConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_connect_bg_shape"
        android:gravity="center"
        android:text="@string/connect"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        android:layout_marginRight="@dimen/demension_dp20"
        app:layout_constraintBottom_toBottomOf="@id/ivPic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/demension_dp1"
        android:background="@color/fd_bg_f2f2f2"
        android:layout_marginTop="@dimen/demension_dp12"
        app:layout_constraintTop_toBottomOf="@id/ivPic" />
</androidx.constraintlayout.widget.ConstraintLayout>