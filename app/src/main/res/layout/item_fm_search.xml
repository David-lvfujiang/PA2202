<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fm_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/fd_text_black"
        android:textSize="@dimen/textsize_sp20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/rb_fm_love"
        android:layout_width="@dimen/demension_dp25"
        android:layout_height="@dimen/demension_dp25"
        android:layout_marginEnd="40dp"
        android:button="@null"
        android:drawableLeft="@drawable/fm_radio_love_select"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fm_rate"
        app:layout_constraintEnd_toEndOf="@+id/bt_compile"
        app:layout_constraintTop_toTopOf="@+id/tv_fm_rate"
        app:layout_constraintVertical_bias="0.461"/>

    <Button
        android:id="@+id/bt_compile"
        android:layout_width="@dimen/demension_dp20"
        android:layout_height="@dimen/demension_dp20"
        android:layout_marginEnd="48dp"
        android:background="@mipmap/icon_compile"
        app:layout_constraintBottom_toBottomOf="@+id/rb_fm_love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rb_fm_love">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>