<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/demension_dp15"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/pic_indoor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp20"
        android:layout_marginTop="@dimen/demension_dp30"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintLeft_toLeftOf="@id/ivPic"
        app:layout_constraintTop_toTopOf="@id/ivPic" />

    <TextView
        android:id="@+id/tvSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demension_dp50"
        android:layout_marginTop="@dimen/demension_dp8"
        android:text="@string/series"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintLeft_toLeftOf="@id/ivPic"
        app:layout_constraintTop_toBottomOf="@id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>