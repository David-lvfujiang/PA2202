<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tws_center_dialog_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_disconnect"
        android:layout_width="@dimen/demension_dp150"
        android:layout_height="@dimen/demension_dp150"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:src="@mipmap/icon_device_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bt_about_shape"
        android:text="@string/cancel"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_connect_title"
        app:layout_constraintStart_toStartOf="@+id/tv_connect_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_title" />

    <TextView
        android:id="@+id/tv_connect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/device_connecting"
        android:textColor="@color/fd_text_black"
        android:textSize="@dimen/textsize_sp22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_disconnect" />
</androidx.constraintlayout.widget.ConstraintLayout>