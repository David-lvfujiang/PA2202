<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tws_center_dialog_shape"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_disconnect"
        android:layout_width="@dimen/demension_dp150"
        android:layout_height="@dimen/demension_dp150"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:src="@mipmap/pic_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tws_title"></ImageView>

    <Button
        android:id="@+id/bt_re_connect"
        android:layout_width="@dimen/demension_dp150"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bt_about_shape"
        android:text="点击重连"
        android:textColor="@color/fd_text_white"
        android:textSize="@dimen/textsize_sp18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_disconnect" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="取消连接"
        android:textColor="@color/fd_text_3c88d4"
        android:textSize="@dimen/demension_dp14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_re_connect"
        app:layout_constraintStart_toStartOf="@+id/bt_re_connect"
        app:layout_constraintTop_toBottomOf="@+id/bt_re_connect" />

    <TextView
        android:id="@+id/tv_tws_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="设备已断连"
        android:textColor="@color/fd_text_black"
        android:textSize="@dimen/textsize_sp22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>