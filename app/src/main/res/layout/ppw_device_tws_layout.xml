<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/tws_center_dialog_shape"
>

<TextView
    android:id="@+id/tv_tws_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="设备TWS服务"
    android:textColor="@color/fd_text_black"
    android:textSize="@dimen/textsize_sp22"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/demension_dp100"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:src="@mipmap/pic_tws"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_tws_title"></ImageView>

<TextView
    android:id="@+id/tv_tws_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:gravity="left"
    android:lineSpacingExtra="@dimen/demension_dp8"
    android:textColor="@color/fd_text_black"
    android:textSize="@dimen/textsize_sp16"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<Button
    android:id="@+id/bt_tws_connect"
    android:layout_width="@dimen/demension_dp150"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/bt_about_shape"
    android:textColor="@color/fd_text_white"
    android:textSize="@dimen/textsize_sp18"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_tws_content" />

<TextView
    android:id="@+id/tv_tws_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    android:textColor="@color/fd_text_3c88d4"
    android:textSize="@dimen/demension_dp14"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/bt_tws_connect"
    app:layout_constraintStart_toStartOf="@+id/bt_tws_connect"
    app:layout_constraintTop_toBottomOf="@+id/bt_tws_connect" />
</androidx.constraintlayout.widget.ConstraintLayout>